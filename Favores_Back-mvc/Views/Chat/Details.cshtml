@model Favores_Back_mvc.Models.Chat
@{
    ViewData["Title"] = "Chat";
    var usuarioId = Context.Session.GetInt32("UsuarioId");
}

<h2>Chat del Favor: @Model.Favor?.Titulo</h2>
<hr />

<div class="mb-3">
    <strong>Creador:</strong> @Model.Creador?.Email <br />
    <strong>Ejecutor:</strong> @Model.Ejecutor?.Email <br />
    <strong>Fecha:</strong> @Model.FechaCreacion.ToString("dd/MM/yyyy HH:mm")
</div>

<!-- CONTENEDOR PRINCIPAL -->
<div style="border:1px solid #ccc; border-radius:10px; padding:20px; height:450px; overflow-y:auto; background:#f7f7f7;">
    @if (Model.Mensajes != null && Model.Mensajes.Any())
    {
        @foreach (var m in Model.Mensajes.OrderBy(m => m.FechaHora))
        {
            bool soyYo = (usuarioId == m.RemitenteId);


            <div style="
                        margin-bottom:12px;
                        display:flex;
                        flex-direction:column;
                        align-items:@(soyYo ? "flex-end" : "flex-start");
                    ">
                <div style="
                            max-width:70%;
                            padding:10px 15px;
                            border-radius:15px;
                            background:@(soyYo ? "#d1f0d1" : "#ffffff");
                            border:1px solid #ccc;
                        ">
                    <strong>@m.Remitente?.Email</strong><br />
                    @m.Texto
                </div>
                <small style="color:#666; margin-top:3px;">
                    @m.FechaHora.ToString("dd/MM HH:mm")
                </small>
            </div>
        }
    }
    else
    {
        <p class="text-muted">No hay mensajes en este chat.</p>
    }
</div>

<hr />

<!-- FORMULARIO DE ENVÍO -->
<form asp-action="EnviarMensaje" method="post">
    <input type="hidden" name="chatId" value="@Model.Id" />

    <div class="form-group mb-2">
        <textarea name="texto" class="form-control" rows="2" placeholder="Escribe un mensaje..." required></textarea>
    </div>

    <button type="submit" class="btn btn-primary">Enviar</button>
    <a asp-action="Index" class="btn btn-secondary">Volver</a>
</form>

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger mt-3">
        @TempData["Error"]
    </div>
}
