@model Favores_Back_mvc.Models.Usuario

@{
    ViewData["Title"] = "Editar Perfil";
}

<div class="container mt-4">

    <h2 class="mb-3">Editar Perfil</h2>

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger">@TempData["Error"]</div>
    }

    <div class="card shadow-lg border-0 rounded-3">
        <div class="card-body p-4">

            <form method="post" enctype="multipart/form-data">
                <input type="hidden" name="id" value="@Model.Id" />

                <!-- FOTO -->
                <div class="mb-3 text-center">
                    <img src="@(Model.FotoPerfil ?? "/img/default-user.png")"
                         class="rounded-circle border"
                         style="width:130px;height:130px;object-fit:cover;" />

                    <input type="file" name="foto" class="form-control mt-3" />
                </div>

                <!-- DATOS EDITABLES -->
                <div class="mb-3">
                    <label class="form-label fw-bold">Nombre</label>
                    <input class="form-control" name="nombre" value="@Model.Nombre" required />
                </div>

                <div class="mb-3">
                    <label class="form-label fw-bold">Email</label>
                    <input class="form-control" type="email" name="email" value="@Model.Email" required />
                </div>

                <button class="btn btn-primary mt-2">Guardar cambios</button>
                <a asp-action="Perfil" class="btn btn-secondary mt-2">Cancelar</a>

            </form>

        </div>
    </div>

</div>
