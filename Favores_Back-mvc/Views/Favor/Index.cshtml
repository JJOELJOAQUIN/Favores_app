

@model IEnumerable<Favores_Back_mvc.Models.Favor>

@{
    ViewData["Title"] = "Listado de Favores";
}

<h2 class="text-center mb-4">Listado de Favores</h2>

<div class="text-end mb-3">
    <a asp-action="Create" class="btn btn-primary">+ Nuevo Favor</a>
</div>

<div class="row row-cols-1 row-cols-md-3 g-4">
    @foreach (var favor in Model)
    {
        <div class="col">
            <div class="card h-100 shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">@favor.Titulo</h5>
                    <p class="card-text text-muted">@favor.Categoria</p>
                    <p class="card-text">
                        <strong>Ubicación:</strong> @favor.Ubicacion <br />
                        <strong>Recompensa:</strong> $@favor.Recompensa (@favor.TipoRecompensa)
                    </p>
                    <p class="card-text"><small class="text-secondary">Creador: @favor.Creador?.Email</small></p>
                </div>
                <div class="card-footer bg-white border-top-0 d-flex justify-content-between">
                    <a asp-controller="Favor"
                       asp-action="Details"
                       asp-route-id="@favor.Id"
                       class="btn btn-outline-primary btn-sm">
                        Ver detalle
                    </a>
                    <a asp-action="Edit" asp-route-id="@favor.Id" class="btn btn-outline-secondary btn-sm">Editar</a>
                    <a asp-action="Delete" asp-route-id="@favor.Id" class="btn btn-outline-danger btn-sm">Eliminar</a>
                </div>
            </div>
        </div>

        <!-- Modal Detalle -->
        <div class="modal fade" id="favorModal_@favor.Id" tabindex="-1" aria-labelledby="favorModalLabel_@favor.Id" aria-hidden="true">
            <div class="modal-dialog modal-dialog-centered">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="favorModalLabel_@favor.Id">@favor.Titulo</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Cerrar"></button>
                    </div>
                    <div class="modal-body">
                        <p><strong>Descripción:</strong> @favor.Descripcion</p>
                        <p><strong>Ubicación:</strong> @favor.Ubicacion</p>
                        <p><strong>Categoría:</strong> @favor.Categoria</p>
                        <p><strong>Recompensa:</strong> $@favor.Recompensa (@favor.TipoRecompensa)</p>
                        <p><strong>Estado:</strong> @favor.Estado</p>
                        <p><strong>Creador:</strong> @favor.Creador?.Email</p>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

<!-- Bootstrap JS -->
@section Scripts {
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
}
