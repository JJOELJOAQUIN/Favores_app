@model Favores_Back_mvc.Models.Favor
@{
    ViewData["Title"] = "Crear un Favor";
}

<link rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">

<style>
    .form-card {
        background: #fff;
        padding: 2rem;
        border-radius: 18px;
        box-shadow: 0 6px 20px rgba(0,0,0,0.08);
    }

    .input-icon {
        position: absolute;
        left: 12px;
        top: 50%;
        transform: translateY(-50%);
        font-size: 18px;
        color: #888;
    }

    .input-with-icon {
        padding-left: 40px !important;
    }
</style>

<div class="container mt-4">

    <h2 class="fw-bold mb-4">Crear un Favor</h2>

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger">@TempData["Error"]</div>
    }

    <div class="form-card">

        <form asp-action="Create" method="post">

            <!-- ===============================
                 TÍTULO
            ================================== -->
            <div class="mb-4 position-relative">
                <i class="bi bi-pencil-square input-icon"></i>
                <label class="form-label fw-semibold">Título del favor</label>
                <input asp-for="Titulo" class="form-control input-with-icon" placeholder="Ej: Ayuda para mudanza" required />
            </div>

            <!-- ===============================
                 DESCRIPCIÓN
            ================================== -->
            <div class="mb-4">
                <label class="form-label fw-semibold">Descripción</label>
                <textarea asp-for="Descripcion" rows="4" class="form-control" placeholder="Describe qué necesitas..." required></textarea>
            </div>

            <!-- ===============================
                 UBICACIÓN
            ================================== -->
            <div class="mb-4 position-relative">
                <i class="bi bi-geo-alt input-icon"></i>
                <label class="form-label fw-semibold">Ubicación</label>
                <input asp-for="Ubicacion" class="form-control input-with-icon" placeholder="Ej: Palermo, CABA" required />
            </div>

            <!-- ===============================
                 CATEGORÍA
            ================================== -->
            <div class="mb-4">
                <label class="form-label fw-semibold">Categoría</label>
                <select asp-for="Categoria" class="form-select" required>
                    <option value="">Seleccionar...</option>
                    <option value="Mudanza">Mudanza</option>
                    <option value="Reparación">Reparación</option>
                    <option value="Clases">Clases</option>
                    <option value="Delivery">Delivery</option>
                    <option value="Servicios">Servicios</option>
                    <option value="Otros">Otros</option>
                </select>
            </div>

            <!-- ===============================
                 RECOMPENSA
            ================================== -->
            <div class="row">
                <div class="col-md-6 mb-4 position-relative">
                    <i class="bi bi-cash-coin input-icon"></i>
                    <label class="form-label fw-semibold">Recompensa</label>
                    <input asp-for="Recompensa" class="form-control input-with-icon" placeholder="Ej: 3000" required />
                </div>

                <div class="col-md-6 mb-4">
                    <label class="form-label fw-semibold">Tipo</label>
                    <select asp-for="TipoRecompensa" class="form-select" required>
                        <option value="">Seleccionar...</option>
                        <option value="ARS">Pesos</option>
                        <option value="USD">Dólares</option>
                        <option value="Horas">Horas</option>
                        <option value="Comida">Comida</option>
                        <option value="Trueque">Trueque</option>
                    </select>
                </div>
            </div>

            <!-- ===============================
                 BOTÓN CREAR
            ================================== -->
            <button class="btn btn-primary btn-lg w-100 mt-3">
                <i class="bi bi-send-plus"></i> Publicar Favor
            </button>

        </form>
    </div>

</div>
