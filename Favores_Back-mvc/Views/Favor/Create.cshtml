@model Favores_Back_mvc.Models.Favor

@{
    ViewData["Title"] = "Crear Favor";
}

<h1 class="mb-4">Crear nuevo favor</h1>

<div class="row">
    <div class="col-md-6">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group mb-3">
                <label asp-for="Titulo" class="form-label"></label>
                <input asp-for="Titulo" class="form-control" />
                <span asp-validation-for="Titulo" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Descripcion" class="form-label"></label>
                <textarea asp-for="Descripcion" class="form-control"></textarea>
                <span asp-validation-for="Descripcion" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Ubicacion" class="form-label"></label>
                <input asp-for="Ubicacion" class="form-control" />
                <span asp-validation-for="Ubicacion" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Categoria" class="form-label"></label>
                <input asp-for="Categoria" class="form-control" />
                <span asp-validation-for="Categoria" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Recompensa" class="form-label"></label>
                <input asp-for="Recompensa" class="form-control" />
                <span asp-validation-for="Recompensa" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="TipoRecompensa" class="form-label"></label>
                <input asp-for="TipoRecompensa" class="form-control" />
                <span asp-validation-for="TipoRecompensa" class="text-danger"></span>
            </div>

            <div class="form-group mt-4">
                <input type="submit" value="Crear Favor" class="btn btn-primary w-100" />
            </div>
        </form>
    </div>
</div>

<div class="mt-3">
    <a asp-action="Index" class="btn btn-outline-secondary">Volver al listado</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
