@model Favores_Back_mvc.Models.Favor

@{
    ViewData["Title"] = "Detalles del Favor";
    var creadorNombre = ViewData["CreadorNombre"] as string;
    var creadorEmail = ViewData["CreadorEmail"] as string;
}

<div class="container mt-5">
    <div class="card shadow-sm border-0">
        <div class="card-header bg-primary text-white">
            <h3 class="mb-0">@Model.Titulo</h3>
        </div>

        <div class="card-body">
            <p class="card-text"><strong>Descripción:</strong> @Model.Descripcion</p>
            <p class="card-text"><strong>Categoría:</strong> @Model.Categoria</p>
            <p class="card-text"><strong>Ubicación:</strong> @Model.Ubicacion</p>
            <p class="card-text"><strong>Recompensa:</strong> @Model.Recompensa (@Model.TipoRecompensa)</p>
            <p class="card-text">
                <strong>Estado:</strong>
                <span class="badge bg-info text-dark">@Model.Estado</span>
            </p>
            <hr />
            <div class="mt-3">
                <h5 class="fw-bold">Publicado por:</h5>
                <p class="mb-1"><i class="bi bi-person-circle"></i> @creadorNombre</p>
                <p class="text-muted"><i class="bi bi-envelope"></i> @creadorEmail</p>
            </div>
        </div>

        <div class="card-footer text-end bg-light">
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-outline-primary me-2">
                <i class="bi bi-pencil"></i> Editar
            </a>
            <a asp-action="Index" class="btn btn-outline-secondary">
                <i class="bi bi-arrow-left"></i> Volver al listado
            </a>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.js"></script>
}
