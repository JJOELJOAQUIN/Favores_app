@model Favores_Back_mvc.Models.Postulacion

@{
    ViewData["Title"] = "Details";
}

<h1>Detalles de la Postulación</h1>

<div>
    <h4>Postulación</h4>
    <hr />

    <dl class="row">

        <dt class="col-sm-2">Mensaje</dt>
        <dd class="col-sm-10">
            @Model.Mensaje
        </dd>

        <dt class="col-sm-2">Favor</dt>
        <dd class="col-sm-10">
            @(Model.Favor?.Categoria ?? "Sin categoría")
        </dd>

        <dt class="col-sm-2">Usuario</dt>
        <dd class="col-sm-10">
            @(Model.Usuario?.Email ?? "Usuario desconocido")
        </dd>

        <dt class="col-sm-2">Fecha</dt>
        <dd class="col-sm-10">
            @Model.FechaPostulacion
        </dd>

        <dt class="col-sm-2">Estado</dt>
        <dd class="col-sm-10">
            @(Model.Estado ?? "Sin estado")
        </dd>

    </dl>
</div>

<div>
    @if (Model.Estado == "Pendiente")
    {
        <form asp-action="Aceptar" method="post">
            <input type="hidden" name="id" value="@Model.Id" />
            <button type="submit" class="btn btn-success">Aceptar Postulación</button>
        </form>
        <br />
    }

    <a asp-action="Edit" asp-route-id="@Model.Id">Editar</a> |
    <a asp-action="Index">Volver</a>
</div>
