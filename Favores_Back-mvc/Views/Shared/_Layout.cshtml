<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - Favores</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/custom.css" asp-append-version="true" />
</head>

<body class="bg-light">

    @{
        var usuarioId = Context.Session.GetInt32("UsuarioId");
        var usuarioEmail = Context.Session.GetString("UsuarioEmail");
        var usuarioRol = Context.Session.GetString("UsuarioRol");
    }
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary shadow-sm">
        <div class="container">

            <a class="navbar-brand fw-bold d-flex align-items-center gap-2"
               asp-controller="Home" asp-action="Index">
                <i class="bi bi-heart-fill"></i> Favores
            </a>

            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse justify-content-end" id="navbarNav">

                <ul class="navbar-nav align-items-center gap-2">

                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Favor" asp-action="Index">
                            Favores
                        </a>
                    </li>

                    @if (Context.Session.GetInt32("UsuarioId") == null)
                    {
                        <li class="nav-item">
                            <a class="btn btn-outline-light btn-sm"
                               asp-controller="Login" asp-action="Index">
                                Ingresar
                            </a>
                        </li>

                        <li class="nav-item">
                            <a class="btn btn-light btn-sm text-primary"
                               asp-controller="Login" asp-action="Register">
                                Crear cuenta
                            </a>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle d-flex align-items-center gap-2"
                               href="#" role="button" data-bs-toggle="dropdown">

                                <i class="bi bi-person-circle fs-5"></i>
                                <span>@Context.Session.GetString("UsuarioEmail")</span>
                            </a>

                            <ul class="dropdown-menu dropdown-menu-end shadow">
                                <li>
                                    <a class="dropdown-item" asp-controller="Usuario" asp-action="Perfil">
                                        <i class="bi bi-person"></i> Mi perfil
                                    </a>
                                </li>

                                <li><hr class="dropdown-divider"></li>

                                <li>
                                    <a class="dropdown-item text-danger"
                                       asp-controller="Login" asp-action="Logout">
                                        <i class="bi bi-box-arrow-right"></i> Cerrar sesión
                                    </a>
                                </li>
                            </ul>
                        </li>
                    }

                </ul>
            </div>
        </div>
    </nav>



    <main class="container my-5">
        @RenderBody()
    </main>

    <footer class="bg-primary text-white text-center py-3 mt-auto">
        <div class="container">
            <p class="mb-0">&copy; @DateTime.Now.Year - Favores App</p>
        </div>
    </footer>

    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)

</body>
</html>
