<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - Favores</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/custom.css" asp-append-version="true" />
</head>

<body class="bg-light">

    @{
        var usuarioId = Context.Session.GetInt32("UsuarioId");
        var usuarioEmail = Context.Session.GetString("UsuarioEmail");
        var usuarioRol = Context.Session.GetString("UsuarioRol") ?? "USER";
    }

    <nav class="navbar navbar-expand-lg navbar-dark bg-primary shadow-sm">
        <div class="container">

            <a class="navbar-brand fw-bold" asp-controller="Home" asp-action="Index">
                Favores
            </a>

            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarNav">

                <ul class="navbar-nav ms-auto">

                    <!-- PUBLIC LINKS -->
                    <li class="nav-item">
                        <a class="nav-link text-white" asp-controller="Home" asp-action="Index">Inicio</a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link text-white" asp-controller="Favor" asp-action="Index">Favores</a>
                    </li>

                    <!-- ============================================
                         USUARIO NO LOGUEADO
                    ============================================= -->
                    @if (usuarioId == null)
                    {
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-controller="Login" asp-action="Index">
                                Iniciar sesión
                            </a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link text-white" asp-controller="Login" asp-action="Register">
                                Crear cuenta
                            </a>
                        </li>
                    }
                    else
                    {
                        <!-- ============================================
                             ADMIN → CREAR FAVOR
                        ============================================= -->
                        @if (usuarioRol == "ADMIN")
                        {
                            <li class="nav-item">
                                <a class="nav-link text-warning fw-bold"
                                   asp-controller="Favor" asp-action="Create">
                                    Crear Favor
                                </a>
                            </li>
                        }

                        <!-- ============================================
                             PERFIL + EMAIL + LOGOUT
                        ============================================= -->
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-controller="Usuario" asp-action="Perfil">
                                Mi Perfil
                            </a>
                        </li>

                        <li class="nav-item d-flex align-items-center text-white mx-3">
                            @usuarioEmail
                            <span class="badge bg-dark ms-2">@usuarioRol</span>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link text-white" asp-controller="Login" asp-action="Logout">
                                Cerrar sesión
                            </a>
                        </li>
                    }
                </ul>

            </div>
        </div>
    </nav>

    <main class="container my-5">
        @RenderBody()
    </main>

    <footer class="bg-primary text-white text-center py-3 mt-auto fixed-bottom">
        <div class="container">
            <p class="mb-0">&copy; @DateTime.Now.Year - Favores App</p>
        </div>
    </footer>

    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)

</body>
</html>
