<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - Favores</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/custom.css" asp-append-version="true" />
</head>

<body class="bg-light">

    @{
        var usuarioId = Context.Session.GetInt32("UsuarioId");
        var usuarioEmail = Context.Session.GetString("UsuarioEmail");
        var usuarioRol = Context.Session.GetString("UsuarioRol");
    }

    <nav class="navbar navbar-expand-lg navbar-light bg-white shadow-sm py-3">
        <div class="container">

            <!-- LOGO -->
            <a class="navbar-brand fw-bold text-primary" asp-controller="Home" asp-action="Index">
                FavoresApp
            </a>

            <!-- BOTÓN COLLAPSE -->
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarNav">

                <!-- ENLACES IZQUIERDA -->
                <ul class="navbar-nav me-auto">
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Favor" asp-action="Index">Favores</a>
                    </li>

                    @if (usuarioRol == "ADMIN")
                    {
                        <li class="nav-item">
                            <a class="btn btn-outline-primary ms-2" asp-controller="Favor" asp-action="Create">
                                + Crear Favor
                            </a>
                        </li>
                    }
                </ul>

                <!-- ZONA DERECHA -->
                <ul class="navbar-nav">

                    @if (usuarioId == null)
                    {
                        <!-- Usuario no logueado -->
                        <li class="nav-item">
                            <a asp-controller="Login" asp-action="Index" class="btn btn-primary px-3">
                                Iniciar Sesión
                            </a>
                        </li>
                    }
                    else
                    {
                        <!-- Avatar y menú -->
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle d-flex align-items-center" href="#"
                               id="userMenu" role="button" data-bs-toggle="dropdown">

                                <img src="/img/default-user.png" class="rounded-circle me-2"
                                     style="width: 34px; height: 34px; object-fit: cover;" />

                                <span>@usuarioEmail</span>
                            </a>

                            <ul class="dropdown-menu dropdown-menu-end shadow-sm">
                                <li>
                                    <a class="dropdown-item" asp-controller="Usuario" asp-action="Perfil">Mi Perfil</a>
                                </li>

                                <li><hr class="dropdown-divider" /></li>

                                <li>
                                    <a class="dropdown-item text-danger" asp-controller="Login" asp-action="Logout">
                                        Cerrar sesión
                                    </a>
                                </li>
                            </ul>
                        </li>
                    }
                </ul>

            </div>
        </div>
    </nav>


    <main class="container my-5">
        @RenderBody()
    </main>

    <footer class="bg-primary text-white text-center py-3 mt-auto fixed-bottom">
        <div class="container">
            <p class="mb-0">&copy; @DateTime.Now.Year - Favores App</p>
        </div>
    </footer>

    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)

</body>
</html>
