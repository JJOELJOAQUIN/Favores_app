@{
    ViewData["Title"] = "Iniciar sesión";
}

<div class="d-flex justify-content-center align-items-center" style="min-height: 90vh;">
    <div class="card shadow-lg border-0 rounded-4 p-4" style="width: 380px;">

        <!-- Header -->
        <div class="text-center mb-4">
            <h2 class="fw-bold text-primary">Favores</h2>
            <p class="text-muted">Ingresá para continuar</p>
        </div>

        <!-- Alertas -->
        @if (TempData["Error"] != null)
        {
            <div class="alert alert-danger">@TempData["Error"]</div>
        }

        <!-- Form -->
        <form method="post">

            <div class="mb-3">
                <label class="form-label fw-bold">Email</label>
                <div class="input-group">
                    <span class="input-group-text bg-light">
                        <i class="bi bi-envelope"></i>
                    </span>
                    <input class="form-control form-control-lg"
                           name="email"
                           type="email"
                           placeholder="tucorreo@mail.com"
                           required />
                </div>
            </div>

            <div class="mb-3">
                <label class="form-label fw-bold">Contraseña</label>
                <div class="input-group">
                    <span class="input-group-text bg-light">
                        <i class="bi bi-lock"></i>
                    </span>
                    <input class="form-control form-control-lg"
                           name="password"
                           type="password"
                           placeholder="••••••••"
                           required />
                </div>
            </div>

            <button class="btn btn-primary w-100 btn-lg mt-3 shadow-sm">
                Ingresar
            </button>

            <div class="text-center mt-3">
                <a asp-action="Register" class="text-decoration-none fw-bold">
                    Crear cuenta nueva
                </a>
            </div>

        </form>

    </div>
</div>
